---
layout: base.njk
---
<div id="content">
    <div id ="content-inner">
        <div>
            {{ content | safe }}
        </div>
        <div id="disqus_thread"></div>
        <script>
            let disqus_config = function () {
                this.page.url = "{{ url.url }}";
                this.page.identifier = "{{ page.url }}";
            };
            (function() {
                let d = document, s = d.createElement("script");
                s.src = "{{ url.disqusUserEmbed }}";
                s.setAttribute("data-timestamp", +new Date());
                (d.head || d.body).appendChild(s);
            })();
        </script>
        <noscript>Please enable JavaScript to view the <a href="{{ url.disqus }}/?ref_noscript">comments powered by Disqus.</a></noscript>
    </div>
</div>